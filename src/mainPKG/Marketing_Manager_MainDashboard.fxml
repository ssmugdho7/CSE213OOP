<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="441.0" prefWidth="656.0" style="-fx-background-color: gray;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="mainPKG.Marketing_Manager_MainDashboardController">
    <VBox fx:id="goalsVBox" layoutX="8.0" layoutY="8.0" prefHeight="417.0" prefWidth="343.0" spacing="10" style="-fx-background-color: white;" AnchorPane.leftAnchor="8.0" AnchorPane.topAnchor="8.0">
      <Label prefHeight="56.0" prefWidth="343.0" text="  Marketing Manager Dashboard   " textFill="#2786c4">
         <font>
            <Font name="Teko SemiBold" size="21.0" />
         </font>
      </Label>
        <!-- Goal 1 Button: Funding request for Digital Marketing -->
        <Button fx:id="fundingRequestButton" onAction="#handleFundingRequest" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Funding Request">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 2 Button: Analysis customer feedback &amp; generate promotional offers -->
        <Button fx:id="analysisOffersButton" onAction="#handleAnalysisOffers" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Analysis &amp; Offers">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 3 Button: Make advertisement for the software -->
        <Button fx:id="softwareAdvertisementButton" onAction="#handleSoftwareAdvertisement" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Software Advertisement">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 4 Button: Promotional advertisement for company -->
        <Button fx:id="promotionalAdButton" onAction="#handlePromotionalAd" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Promotional Ad">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 5 Button: Send Equipment request to CEO -->
        <Button fx:id="equipmentRequestButton" onAction="#handleEquipmentRequest" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" text="Equipment Request">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 6 Button: Send task to Network engineer -->
        <Button fx:id="networkTaskButton" onAction="#handleNetworkTask" style="-fx-background-color: #795548; -fx-text-fill: white;" text="Network Task">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 7 Button: Check for Admin Approval -->
        <Button fx:id="adminApprovalButton" onAction="#handleAdminApproval" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Admin Approval">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Goal 8 Button: Sending Email to Sponsors -->
        <Button fx:id="emailToSponsorsButton" onAction="#handleEmailToSponsors" style="-fx-background-color: #00BCD4; -fx-text-fill: white;" text="Email to Sponsors">
         <font>
            <Font name="Consolas" size="16.0" />
         </font></Button>
        <!-- Logout Button -->
        <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #FF5722; -fx-text-fill: white;" text="Logout" />
    </VBox>
</AnchorPane>
